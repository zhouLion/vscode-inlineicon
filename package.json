{
	"name": "vsc-licon",
	"displayName": "vsc-licon",
	"description": "Provide code helper for include code snippets, icon preview etc.",
	"version": "0.0.1",
	"private": true,
	"preview": true,
	"publisher": "zhouLion",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:vue",
		"onLanguage:vuejs",
		"workspaceContains:package.json"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "vsc-licon 配置项",
			"properties": {
				"vsc-licon.annotations": {
					"type": "boolean",
					"default": true,
					"description": "是否启用图标标记"
				},
				"vsc-licon.svgsDir": {
					"type": "string",
					"default": "src/assets/icons",
					"description": "svg 文件放置的目录"
				},
				"vsc-licon.onlyIcon": {
					"type": "boolean",
					"default": true,
					"description": "是否仅展示图标"
				}
			}
		},
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/medical-component.code-snippets"
			},
			{
				"language": "vue",
				"path": "./snippets/medical-component.code-snippets"
			},
			{
				"language": "vue-html",
				"path": "./snippets/medical-component.code-snippets"
			}
		],
		"commands": [
			{
				"command": "vsc-licon.hello",
				"title": "向世界 say hi 🔔～"
			},
			{
				"command": "vsc-licon.toggleOnlyIcon",
				"title": "切换：是否仅展示图标"
			},
			{
				"command": "vsc-licon.toggleAnnotations",
				"title": "切换：是否启用图标标记"
			}
		]
	},
	"scripts": {
		"build": "esno scripts/build.ts",
		"dev": "esno scripts/dev.ts",
		"lint": "eslint src/**/* --fix --ext .ts,.js",
		"pkg": "npm run build && cd dist && vsce package",
		"release": "bumpp --tag --push --commit",
		"test": "esno src/test/runTest.ts"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"@vue/reactivity": "^3.2.33",
		"eslint": "^8.14.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-mocha": "^10.0.4",
		"eslint-plugin-n": "^15.2.0",
		"eslint-plugin-promise": "^6.0.0",
		"esno": "^0.14.1",
		"fs-extra": "^10.1.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tsup": "^5.12.6",
		"typescript": "^4.0.0"
	}
}
